page {
  background: #eee;
}

.rule {
  width: 100%;
  height: 100vh;
  position: relative;
}

.content {
  width: calc(100% - 40rpx);
  height: calc(100vh - 40rpx);
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  border: 2rpx solid #fff;
  padding: 20rpx;
}
.rule-logo{
  width: 100%;
  height: 144rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.logo_pic{
  width: 320rpx;
  height: 104rpx;
}

.title {
  width: 100%;
  padding: 10rpx;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 0.5);
  color: #222;
}

.words {
  margin: 20rpx 0;
  color: #222;
  font-size: 28rpx;
}

.words view {
  margin-bottom: 10rpx;
}
