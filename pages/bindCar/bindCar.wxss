.container-bindCar {
  width: 100%;
  height: 100vh;
  background: #eee;
}

.no_car {
  width: 100%;
  height: 600rpx;
  background: #eee;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.no_car .content_center {
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #888;
}

.no_car .content_center image {
  width: 160rpx;
}

.bind_button {
  width: 700rpx;
  height: 92rpx;
  border-radius: 46rpx;
  color: #fff;
  font-weight: 400;
  text-align: center;
  line-height: 92rpx;
  background: #e34747;
  position: fixed;
  bottom: 120rpx;
}

.has_car {
  width: 100%;
  background: #eee;
  display: flex;
  padding: 20rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list-content {
  width: 100%;
  height: 860rpx;
}

.list_type {
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  position: relative;
}

.list_type .btnEvent {
  flex: 3;
  display: flex;
}

.list_type .type_content {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list_type .tof {
  position: absolute;
  top: 0;
  left: 0;
  background: #fdd360;
  color: #fff;
  font-size: 24rpx;
  width: 100rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  border-radius: 10rpx;
}

.type_content .plate {
  width: 280rpx;
  height: 80rpx;
  background: #2b91d5;
  border-radius: 20rpx;
  padding: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.plate .plate_bd {
  width: 100%;
  height: 100%;
  border: 1px solid #fff;
  border-radius: 16rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list_type .card_num {
  flex: 1;
  padding: 10rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.card_num .tips {
  font-size: 28rpx;
  color: #888;
  width: 100%;
  padding-left: 40rpx;
  text-align: left;
}

.card_num .car_nub {
  font-size: 28rpx;
  color: #888;
  width: 100%;
  padding-left: 40rpx;
  text-align: left;
}

.list_type .relieve {
  flex: 1.5;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 10rpx;
}

.relieve .btn {
  width: 100rpx;
  height: 100%;
  font-size: 24rpx;
  border: 4rpx solid #e34747;
  border-radius: 20rpx;
  color: #e34747;
  display: flex;
  justify-content: center;
  align-items: center;
}
