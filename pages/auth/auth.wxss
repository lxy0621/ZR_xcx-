.container-login {
  width: 100%;
  height: 100vh;
  background: #fff;
}

.login {
  width: 100%;
  height: 450rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login image {
  width: 380rpx;
}

.disc {
  width: 100%;
  height: 260rpx;
  padding: 0 60rpx;
}

.disc .title {
  font-weight: 600;
  margin-bottom: 40rpx;
}

.disc .content {
  color: #888;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.sq_view {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.sq_view .sq_btn1 {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  border: none;
  font-size: 28rpx;
  background: #e34747;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sq_view .sq_btn2 {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  border: none;
  font-size: 28rpx;
  background: #e34747;
  display: flex;
  justify-content: center;
  align-items: center;
}
